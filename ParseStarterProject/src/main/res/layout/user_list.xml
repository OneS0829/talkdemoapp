<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/userlist_layout">

    <ImageView
        android:id="@+id/userlist_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/app_name"
        android:padding="10dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="7dp">


        <LinearLayout
            android:id="@+id/userlist_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="7dp">

                 <TextView
                    android:id="@+id/userlist_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/userlist_last_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:paddingTop="5dp"
                    android:text="No message..."/>

        </LinearLayout>

        <TextView
            android:id="@+id/userlist_last_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/userlist_unread_message_number"/>


        <TextView
            android:id="@+id/userlist_unread_message_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textSize="10sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_circle_red"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</LinearLayout>
