<?xml version="1.0" encoding="utf-8"?>
<!-- android:shape指定形状类型，默认为rectangle -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- padding设置内间距 -->
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />
    <!-- size设置形状的大小 -->
    <size
        android:width="15dp"
        android:height="15dp" />
    <!-- gradient设置渐变 -->
    <gradient
        android:endColor="#FF0000"
        android:gradientRadius="15dp"
        android:startColor="#FF0000"
        android:type="radial" />
</shape>
